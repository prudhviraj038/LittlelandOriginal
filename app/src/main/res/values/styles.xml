    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/app_purple</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteCheck">
        <item name="colorAccent">@color/techer_orange</item>
    </style>

    <style name="AppTheme_Video" parent="Theme.AppCompat.NoActionBar">

        <item name="android:statusBarColor">@color/app_purple</item>
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

</resources>
