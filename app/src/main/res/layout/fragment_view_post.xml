<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/white"


    tools:context="com.leadinfosoft.littleland.fragment.ViewPost">

    <!--<android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_week"
            android:layout_width="@dimen/home_round_50dp"
            android:layout_height="@dimen/viewpost_tab_heth"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/viewpost_weekly_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="Weekly"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/viewpost_tab_text_heth" />

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_today"
            android:layout_width="@dimen/home_round_50dp"
            android:layout_height="@dimen/viewpost_tab_heth"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/viewpost_today_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="Today"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/viewpost_tab_text_heth" />

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_month"
            android:layout_width="@dimen/home_round_50dp"
            android:layout_height="@dimen/viewpost_tab_heth"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/viewpost_monthly_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="Monthly"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/viewpost_tab_text_heth" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_week"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:paddingRight="0dp"
            android:src="@drawable/bubal_week"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_today"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"

            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:src="@drawable/bubal_today"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_month"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginLeft="3dp"

            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:src="@drawable/bubal_month"
            android:visibility="invisible" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_viewpost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:visibility="gone"
            android:textColor="@color/black"
            android:text="No Post Available"/>

    </FrameLayout>
    <!--
    </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    -->


</LinearLayout>

