<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/lv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/iv_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/tv_username"
                app:siBorderColor="@color/green"
                app:siBorderWidth="1dp"

                android:src="@drawable/student" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/iv_disable_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible"

                android:src="@drawable/white_trasp_bg" />
        </FrameLayout>


        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_studentname"
            android:layout_width="130dp"
            android:layout_height="@dimen/mont_attend_name_heth"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:text="Abcdef sduwhs"
            android:gravity="center"
            android:textSize="@dimen/mont_attend_name_text"
            android:textAllCaps="true"
            android:textColor="@color/attend_disable_txt" />
    </LinearLayout>

</LinearLayout>