<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"

    android:paddingTop="5dp">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/event_bg_traprent">

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baby"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_date_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.leadinfosoft.littleland.widget.MyTextView
                android:layout_width="@dimen/home_round_50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.4"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="12:25 Am"
                android:textColor="@color/black"
                android:textSize="@dimen/home_date_time_12sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:src="@drawable/yellow_calender" />

            <com.leadinfosoft.littleland.widget.MyTextView
                android:id="@+id/myTextView"
                android:layout_width="@dimen/home_round_50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0.4"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="16-06-2017"
                android:textColor="@color/black"
                android:textSize="@dimen/home_date_time_12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/ll_date_time"
            android:layout_marginLeft="-13dp"
            android:layout_marginRight="-13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baby"
            android:visibility="gone" />

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="170dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="Just Kuwaiti dude"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="@dimen/home_viepager_title_12sp" />

        <com.leadinfosoft.littleland.widget.MyTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="7"
            android:minLines="7"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="jkgjhgjghg fghfghfg ytuytu gfdcgh hghjgfftyry gffhgfhgfh htyrytryt fyfghhjghjgjj hghjfjhfhfh ghhghjghjghjgjhgj hghjghjgjbh hgfhjgjhgjh ytgyutuyghghj hgjhghjghj hgjhgjhgjh jhgjhghjgj hgjhgu yutyuty ttiu guiyuiy uyuiyyoiyuoi tuytrtfgh gfhfgfghfgfghfytuiyoiyhjhg uytu gfdcgh hghjgfftyry gffhgfhgfh htyrytryt fyfghhjghjgjj hghjfjhfhfh ghhghjghjghjgjhgj hghjghjgjbh hgfhjgjhgjh ytgyutuyghghj hgjhghjghj hgjhgjhgjh jhgjhghjgj hgjhgu yutyuty ttiu guiyuiy uyuiyyoiyuoi tuytrtfgh gfhfgfghfgfghfytuiyoiyhjhg"
            android:textSize="8sp" />


        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/parpal_round_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:text="View More"
            android:textAllCaps="true"
            android:textColor="@color/more_gray_text"
            android:textSize="@dimen/home_view_more_12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/iv_curve_bg_new"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_new_task"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/news" />

</RelativeLayout>