<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="310dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:background="@color/white"

    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/event_bg_traprent"
            >

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/baby"
            android:scaleType="centerCrop"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/ll_date_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <com.leadinfosoft.littleland.widget.MyTextView
                android:layout_width="@dimen/home_round_50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingRight="10dp"
                android:text="16-06-2017 "
                android:textSize="@dimen/home_date_time_12sp"
                android:layout_marginLeft="15sp"
                android:singleLine="true"
                android:gravity="center_vertical|right"

                android:textColor="@color/black"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="30dp"
                android:src="@drawable/yellow_calender"
                />

            <com.leadinfosoft.littleland.widget.MyTextView
                android:layout_width="@dimen/home_round_50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="12:25 Am"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/home_date_time_12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/baby"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_below="@+id/ll_date_time"/>

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:layout_marginTop="180dp"
            android:text="فقط المتأنق الكويتي"
            android:textColor="@color/green"
            android:textAllCaps="true"
            android:textSize="@dimen/home_viepager_title_12sp"
            />

        <com.leadinfosoft.littleland.widget.MyTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:maxLines="7"
            android:minLines="7"
            android:ellipsize="end"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:text="سا داسد   ساسداد سازادا فوير دادا إيويور غورتكوداويتيكو غزغ هغجدا ييقو غجغدا غاغددارور"
            android:layout_below="@+id/tv_title"
            />

        <com.leadinfosoft.littleland.widget.MyHeaderTextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAllCaps="true"
            android:text="عرض المزيد"
            android:textSize="@dimen/home_view_more_12sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dark_gray_text"
            android:background="@drawable/parpal_round_bg"
            android:layout_alignParentBottom="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/iv_curve_bg_new">

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_new_task"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/news"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>