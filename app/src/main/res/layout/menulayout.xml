<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92749A"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_menu_bottom_left"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/menu_bottom" />

    <ImageView
        android:id="@+id/iv_menu_bottom_right"

        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_login_right" />

    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_profile"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/no_image_available"
            app:siBorderColor="@color/white"
            app:siBorderWidth="3dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="-12dp"
            android:layout_toRightOf="@+id/iv_profile"
            android:src="@drawable/orange_circle" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="-25dp"
            android:layout_toLeftOf="@+id/iv_profile"
            android:src="@drawable/green_star" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_menulist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_profile"
        android:divider="@null"></ListView>

</RelativeLayout>